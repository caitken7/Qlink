<div id="container-wrap">
    <div id="bg"></div>
    <div class="container text-center">
        <img class="img-circle" src="{{results.user_photo}}">
        <h4>{{results.first_name}} {{results.last_name}}</h4>
        <a href="/profile/edit">
            <i class="fa fa-pencil" aria-hidden="true"></i>
        </a>
        
        <div class="city">
            <!-- <img src="images/location.svg" alt="location"> -->
            <h5><i class="fa fa-map-marker" aria-hidden="true"></i>{{results.city}}</h5>

        </div>
        
        <div id="wrapper">
            <h5 style="float: left; margin-top: 8px; margin-right: 10px;">NOT LOOKING</h5>
            <div style="float: left;">  
                <label class="switch">
                    {{#if results.hire_me}}
                        <input type="checkbox" checked>     
                    {{else}}
                        <input type="checkbox">
                    {{/if}}
                    <span class="slider round"></span>
                </label>
            </div>
            <h5 style="float: left; margin-top: 8px; margin-left: 10px;">HIRE ME</h5>
        </div>

        <h5>{{results.organization}}</h5>
        <h5>{{results.role}}</h5>

        <div id="bio">
            <p>
                {{results.bio}}
            </p>
        </div>
        
        <a href={{results.linkedin}}>
            <i class="fa fa-linkedin-square fa-2x" aria-hidden="true"></i>    
        </a>
        <a href={{results.twitter}}>
            <i class="fa fa-twitter-square fa-2x" aria-hidden="true"></i>
        </a>
    </div>
</div>